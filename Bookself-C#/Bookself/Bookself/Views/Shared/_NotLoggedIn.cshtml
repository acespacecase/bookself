<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title | Bookself</title>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,400i,700,700i|Zilla+Slab:400,400i,700,700i" rel="stylesheet">
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/styles.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-3.1.1.min.js")" defer></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")" defer></script>
</head>

<body>
    <div class="container-fluid">
        
        <div class="row bookself-header-centered">
            <div class="col-xs-12">
                <div class="logo-section">
                    <h1>Bookself</h1>
                    <span class="logo-subtitle">Rediscover the books you already own</span>
                </div>
            </div>
        </div>

        <div class="content-container">
            @RenderBody()
        </div>
    </div>
</body>

</html>
