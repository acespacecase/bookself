<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title | Bookself</title>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,400i,700,700i|Zilla+Slab:400,400i,700,700i" rel="stylesheet">
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/styles.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-3.1.1.min.js")" defer></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")" defer></script>
</head>

<body>
    <div class="container-fluid">

        <div class="row bookself-header-centered">
            <div class="col-xs-12">
                <div class="logo-section">
                    <h1>Bookself</h1>
                    <span class="logo-subtitle">Rediscover the books you already own</span>
                </div>
                <nav class="navbar">
                    <div class="container-fluid">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-nav" aria-expanded="false">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>
                        <div class="collapse navbar-collapse" id="main-nav">
                            <ul class="nav navbar-nav">
                                <li><a href="#">Discover</a></li>
                                <li><a href="#">Manage Books</a></li>
                                <li><a href="#">Your Account</a></li>
                                <li><a href="#">Logout</a></li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </div>

        <div class="content-container">
            @RenderBody()
        </div>

        <div class="row">
            <div class="col-xs-12">
                <p>Made with &hearts; by <a href="https://github.com/acespacecase" target="_blank">Stacy</a>, 2017.</p>
            </div>
        </div>
    </div>
</body>

</html>
